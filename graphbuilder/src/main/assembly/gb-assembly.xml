<assembly>
	<id>with-deps</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<scope>runtime</scope>
			<excludes>
			<!-- even if we say runtime scope, provided scope dependencies also get packaged
			see http://jira.codehaus.org/browse/MASSEMBLY-324
			slf4j jars cause several versioning problems -->
				<exclude>org.slf4j:slf4j-api</exclude>
				<exclude>org.slf4j:slf4j-log4j12</exclude>
				<exclude>org.slf4j:jcl-over-slf4j</exclude>
				<exclude>org.slf4j:jcl-over-slf4j</exclude>
				<exclude>org.apache.hbase:hbase</exclude>
				<exclude>org.apache.zookeeper:zookeeper</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>


</assembly>