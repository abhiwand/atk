CUSTOM_PARSER='mcafee_udfs.parseRecord(*)'
INPUT_DELIM='\\n'
OUTPUT_FILE=/tmp/mcafee_processed_csv
TRANSFORMED_OUTPUT=/tmp/mcafee_standardized
INPUT_FILE=/tmp/mcafee_ram_data.txt
SCHEMA_DEF='(sip: chararray, rpr: chararray, sn: chararray, pktsz: long, bufsz: long, id: chararray)'
DEGREE_OF_PARALLELISM=4
FIELD_EXTRACTORS='$0.sip, $0.rpr, $0.sn, $0.pktsz, $0.bufsz, $0.id'
OUTPUT_DELIM=','
