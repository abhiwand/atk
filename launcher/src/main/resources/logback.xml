<configuration scan="true">

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/intelanalytics/rest-server/application.log</file>
        <encoder>
            <pattern>%date - [%level] - %mdc{corId:-?} %thread - %logger :  %message %n%ex{full}%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- please keep full stack traces in here, the logs are worthless without them, thanks. -->
            <pattern>%logger{15} - %mdc{corId:-?} - %message %n %ex{full}%n</pattern>
        </encoder>
    </appender>

    <logger name="play" level="INFO" />
    <logger name="application" level="INFO" />
    <logger name="scala.slick" level="INFO" />
    <!-- SQL statement logging -->
    <!--logger name="scala.slick.jdbc.JdbcBackend.statement" level="DEBUG" /-->

    <logger name="org.apache.spark" level="INFO" />
    <logger name="org.eclipse.jetty" level="INFO" />
    <logger name="org.apache.hadoop" level="INFO" />
    <!--
        log levels
        TRACE
        DEBUG
        INFO
        WARN
        ERROR
    -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
