<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>package</artifactId>
    <name>package</name>

    <parent>
        <groupId>com.intel.ia</groupId>
        <artifactId>IntelAnalytics</artifactId>
        <relativePath>../pom.xml</relativePath>
        <version>0.8.6-SNAPSHOT</version>
    </parent>

    <properties>
        <pkg.version>0.9.1</pkg.version>
    </properties>
    <profiles>
        <profile>
            <id>package</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
					<value>0</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>

                        <executions>
                            <execution>
                                <id>chmod-shellscripts</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>chmod</executable>
                                    <arguments>
                                        <argument>-R</argument>
                                        <argument>+x</argument>
                                        <argument>${basedir}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!--execution>
                                <id>tar-gz-rest-server</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <workingDirectory>${basedir}</workingDirectory>
                                    <arguments>
                                        <argument>${basedir}/config/intelanalytics-rest-server-tar/package.sh</argument>
                                    </arguments>
                                </configuration>
                            </execution-->
                            <execution>
                                <id>package-rest-server</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <workingDirectory>${basedir}</workingDirectory>
                                    <arguments>
                                        <argument>package.sh</argument>
                                        <argument>-m</argument>
                                        <argument>yes</argument>
                                        <argument>-p</argument>
                                        <argument>intelanalytics-rest-server</argument>
                                        <argument>-b</argument>
                                        <argument>${env.BUILD_NUMBER}</argument>
                                        <argument>-v</argument>
                                        <argument>${pkg.version}</argument>
                                        <argument>--tar</argument>
                                        <argument>${basedir}/intelanalytics-rest-server-source.tar.gz</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>package-python-rest-client</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <workingDirectory>${basedir}</workingDirectory>
                                    <arguments>
                                        <argument>package.sh</argument>
                                        <argument>-m</argument>
                                        <argument>yes</argument>
                                        <argument>-p</argument>
                                        <argument>intelanalytics-python-rest-client</argument>
                                        <argument>-b</argument>
                                        <argument>${env.BUILD_NUMBER}</argument>
                                        <argument>-v</argument>
                                        <argument>${pkg.version}</argument>
                                        <argument>--tar</argument>
                                        <argument>${basedir}/intelanalytics-python-rest-client-source.tar.gz</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>package-spark-deps</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <workingDirectory>${basedir}</workingDirectory>
                                    <arguments>
                                        <argument>package.sh</argument>
                                        <argument>-m</argument>
                                        <argument>yes</argument>
                                        <argument>-p</argument>
                                        <argument>intelanalytics-spark-deps</argument>
                                        <argument>-b</argument>
                                        <argument>${env.BUILD_NUMBER}</argument>
                                        <argument>-v</argument>
                                        <argument>${pkg.version}</argument>
                                        <argument>--tar</argument>
                                        <argument>${basedir}/intelanalytics-spark-deps-source.tar.gz</argument>
                                    </arguments>
                                </configuration>
                            </execution>

                            <execution>
                                <id>package-intelanalytics-parcel</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <workingDirectory>${basedir}</workingDirectory>
                                    <arguments>
                                        <argument>package.sh</argument>
                                        <argument>-m</argument>
                                        <argument>yes</argument>
                                        <argument>-p</argument>
                                        <argument>intelanalytics</argument>
                                        <argument>-b</argument>
                                        <argument>${env.BUILD_NUMBER}</argument>
                                        <argument>-v</argument>
                                        <argument>${pkg.version}</argument>
                                        <!--<argument>-tar</argument>
                                        <argument>${basedir}/intelanalytics-spark-deps-source.tar.gz</argument>-->
                                    </arguments>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>


</project>
