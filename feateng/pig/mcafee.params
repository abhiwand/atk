NORMALIZED_FIELDS='$0.sip, $0.rpr, $0.sn, ($0.pktsz - avg_var_relation.$0)/stddev_relation.stddev as normalized_pkt_size , $0.bufsz, $0.id'
NORMALIZATION_FIELD=pktsz